<html>
    <head>
        <%- include('partials/head.ejs')%>
        <link href="/css/register.css" rel="stylesheet" type="text/css">
    </head>
 
    <body>
        <div class="container">
            <br>
            
            <hr>
            
            
            
            
            
            <div class="card bg-light" style="max-width: 500px; margin-left: 25%;">
            <article class="card-body mx-auto" style="max-width: 500px;">
                <h4 class="card-title mt-3 text-center">Add Task</h4>
                <form method="POST" action="/addTask/?uuid=<%=data%>">
                    <h6>Task Title:</h6>
                <div class="form-group input-group">
                    
                    <div class="input-group-prepend">
                        <span class="input-group-text"> </span>
                     </div>
                    <input name="taskcontent" class="form-control" placeholder="Task Title" type="text" required>
                </div> <!-- form-group// -->
                <br>
                                       
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Add Task  </button>
                </div> <!-- form-group// -->                                                                      
            </form>
            </article>
            </div> <!-- card.// -->
            
            </div> 
            <!--container end.//-->
            
            
    </body>
</html>

